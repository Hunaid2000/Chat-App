<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainplayersActivity"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:openDrawer="left"
    android:elevation="10dp"
    android:id="@+id/drawerLayout"
    >

    <com.google.android.material.navigation.NavigationView
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:id="@+id/navigation_view"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/menu_left"
        app:itemTextColor="@drawable/state_selector"
        app:itemIconTint="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/exit"
                android:contentDescription="@string/logout"
                />
            <TextView
                android:textColor="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center_vertical"
                android:text="@string/logout"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
    <com.google.android.material.navigationrail.NavigationRailView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_menu"
                android:orientation="vertical"
                android:weightSum="11"
                android:paddingTop="20dp"
                >

                <RelativeLayout
                    android:paddingHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/menu_toggle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/menu_icon_desc"
                        android:src="@drawable/menu_top_icon" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/menu_icon_desc"
                        android:src="@drawable/person_icon"
                        android:id="@+id/imageview_profile"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.5">

                    <TextView
                        android:id="@+id/playlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:text="@string/playlist"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/playlist"
                        >
                        <LinearLayout
                            android:id="@+id/playlist_listScroll"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginBottom="30dp"
                            >
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                >

                                <ImageView
                                    android:id="@+id/song_icon1"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:contentDescription="@string/song_icon_desc"
                                    android:src="@drawable/song_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/song_icon1"
                                    android:layout_centerHorizontal="true"
                                    android:text="@string/playlist_1"
                                    android:textColor="@color/orange"
                                    android:textSize="18sp" />


                            </RelativeLayout>

                        </LinearLayout>
                    </HorizontalScrollView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.5">
                    <TextView
                        android:id="@+id/artists"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:text="@string/artists"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/artists"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                >
                                <ImageView
                                    android:id="@+id/artists_icon1"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:contentDescription="@string/artist_icon_desc"
                                    android:src="@drawable/artist_icon" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/artists_icon1"
                                    android:layout_centerHorizontal="true"
                                    android:text="@string/artists_1"
                                    android:textColor="@color/orange"
                                    android:textSize="18sp" />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                >
                                <ImageView
                                    android:id="@+id/artists_icon2"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:contentDescription="@string/artist_icon_desc"
                                    android:src="@drawable/artist_icon" />
                                <TextView
                                    android:layout_below="@+id/artists_icon2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/orange"
                                    android:textSize="18sp"
                                    android:text="@string/artists_2"
                                    android:layout_centerHorizontal="true"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                >
                                <ImageView
                                    android:id="@+id/artists_icon3"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:contentDescription="@string/artist_icon_desc"
                                    android:src="@drawable/artist_icon" />
                                <TextView
                                    android:layout_below="@+id/artists_icon3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/orange"
                                    android:textSize="18sp"
                                    android:text="@string/artists_3"
                                    android:layout_centerHorizontal="true"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                >

                                <ImageView
                                    android:id="@+id/artists_icon4"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:contentDescription="@string/artist_icon_desc"
                                    android:src="@drawable/artist_icon" />
                                <TextView
                                    android:layout_below="@+id/artists_icon4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/orange"
                                    android:textSize="18sp"
                                    android:text="@string/artists_4"
                                    android:layout_centerHorizontal="true"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                >
                                <ImageView
                                    android:id="@+id/artists_icon5"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:contentDescription="@string/artist_icon_desc"
                                    android:src="@drawable/artist_icon" />
                                <TextView
                                    android:layout_below="@+id/artists_icon5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/orange"
                                    android:textSize="18sp"
                                    android:text="@string/artists_5"
                                    android:layout_centerHorizontal="true"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                >
                                <ImageView
                                    android:id="@+id/artists_icon6"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:contentDescription="@string/artist_icon_desc"
                                    android:src="@drawable/artist_icon" />
                                <TextView
                                    android:layout_below="@+id/artists_icon6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/orange"
                                    android:textSize="18sp"
                                    android:text="@string/artists_6"
                                    android:layout_centerHorizontal="true"
                                    />
                            </RelativeLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </RelativeLayout>

            </LinearLayout>
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/silver_lite"
                android:paddingVertical="10dp"
                app:itemIconTint="@drawable/state_selector"
                app:itemTextColor="@drawable/state_selector"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_menu"
                android:id="@+id/bottom_menu"
                />
        </RelativeLayout>
    </com.google.android.material.navigationrail.NavigationRailView>

</androidx.drawerlayout.widget.DrawerLayout>