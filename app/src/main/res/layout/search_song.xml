<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchSong"
    android:background="@color/black"
    >

    <RelativeLayout
        android:id="@+id/like_song"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingEnd="20dp"
        android:paddingStart="0dp"
        >

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/menu_icon_desc"
            android:src="@drawable/back_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="25dp"
            android:layout_toEndOf="@id/arrow_back"
            android:background="@drawable/rectangle_button">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:background="@color/white"
                android:hint="@string/search_song_hint"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/orange"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/toggle_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/like_song"
        android:layout_marginHorizontal="20dp"
        >

        <TextView
            android:id="@+id/option_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/recent_search"
            android:textColor="@color/orange"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/search_result_1"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggle_menu"
        android:layout_marginTop="20dp"
        android:weightSum="1"
        android:baselineAligned="false">
        <RelativeLayout
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="80dp"
            >
            <ImageView
                android:id="@+id/artists_icon_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/artist_icon_desc"
                android:src="@drawable/artist_2" />
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/artists_icon_1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/song_name"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/artists"
                    android:textColor="@color/orange"
                    />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/cancel_icon_desc"
                android:scaleType="centerInside"
                android:src="@drawable/cancel_icon" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_result_2"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_result_1"
        android:layout_marginTop="20dp"
        android:weightSum="1"
        android:baselineAligned="false">
        <RelativeLayout
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="80dp"
            >

            <ImageView
                android:id="@+id/artists_icon_2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/song_icon_desc"
                android:src="@drawable/song_icon" />

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/artists_icon_2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/song_name"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/artists"
                    android:textColor="@color/orange"
                    />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/cancel_icon_desc"
                android:scaleType="centerInside"
                android:src="@drawable/cancel_icon" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_result_3"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_result_2"
        android:layout_marginTop="20dp"
        android:weightSum="1"
        android:baselineAligned="false">
        <RelativeLayout
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="80dp"
            >

            <ImageView
                android:id="@+id/artists_icon_3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/song_icon_desc"
                android:src="@drawable/song_icon" />

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/artists_icon_3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/song_name"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/artists"
                    android:textColor="@color/orange"
                    />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:contentDescription="@string/cancel_icon_desc"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/cancel_icon"
                />
        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/silver_lite"
        android:paddingVertical="10dp"
        app:itemIconTint="@drawable/state_selector"
        app:itemTextColor="@drawable/state_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu"
        android:id="@+id/bottom_menu"
        />
</RelativeLayout>