<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contactsActivity"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:openDrawer="left"
    android:elevation="10dp"
    android:id="@+id/drawerLayout"
    >
    <com.google.android.material.navigation.NavigationView
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:id="@+id/navigation_view"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/menu_left"
        app:itemTextColor="@drawable/state_selector"
        app:itemIconTint="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/exit"
                android:contentDescription="@string/logout"
                />
            <TextView
                android:textColor="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center_vertical"
                android:text="@string/logout"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context=".chatActivity"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/msgbar"
            android:layout_weight="0.2"
            android:background="@drawable/chat_top_bar"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:src="@drawable/back_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="MESSAGES"/>

                <ImageButton
                    android:id="@+id/profile_image"
                    android:layout_alignParentEnd="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clipToOutline="true"
                    android:background="@drawable/rectangle_button"
                    android:scaleType="fitXY"
                    android:src="@drawable/artist_2"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

            <EditText
                android:id="@+id/search_contacts_text"
                android:layout_width="match_parent"
                android:hint="Search contact"
                android:textColorHint="@color/white"
                android:layout_height="40dp"
                android:includeFontPadding="true"
                android:padding="10dp"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/search_icon_white"
                android:drawablePadding="10dp"
                android:background="@drawable/rectangle_button_yellow" />

            </LinearLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contacts_rv"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_weight="0.8"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/add_contact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/sent_msg_box"
            android:src="@drawable/add_icon"/>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>