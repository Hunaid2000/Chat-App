<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SignupActivity"
    android:fillViewport="true">
    <LinearLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">
        <RelativeLayout
            android:layout_weight=".15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            >
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/sign_in"
                android:text="@string/sign_in"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:onClick="Sign_In"
                tools:ignore="UsingOnClickInXml" />
            <ImageView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_in"
                android:layout_alignParentStart="true"
                android:layout_marginVertical="20dp"
                android:contentDescription="@string/app_logo_description"
                android:src="@drawable/logo" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:textColor="@color/white"
                android:text="@string/app_named"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_button"
                android:layout_marginBottom="15dp"
                >

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:autofillHints="Anas"
                    android:background="@color/white"
                    android:hint="Name"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/orange"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_button"
                android:layout_marginBottom="15dp"
                >

                <EditText
                    android:id="@+id/phno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:autofillHints="@string/lastName"
                    android:background="@color/white"
                    android:hint="Phone Number"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/orange"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_button"
                android:layout_marginBottom="15dp">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:autofillHints="Email"
                    android:background="@color/white"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/orange"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_button"
                android:layout_marginBottom="15dp">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="70dp"
                    android:autofillHints="password"
                    android:background="@color/white"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/orange"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/showPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:contentDescription="@string/show"
                    android:text="@string/show"
                    android:textColor="@color/orange"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textColor="@color/orange"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gender"
                    android:layout_centerInParent="true"
                    android:layout_marginVertical="15dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/gender_male"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/gender_image_male"
                        android:background="@drawable/gender_circle">
                        <!-- Add the image   -->
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/image_desc"
                            android:src="@drawable/male" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/gender_female"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/gender_image_male"
                        android:background="@drawable/gender_circle">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/image_desc"
                            android:src="@drawable/female" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/gender_other"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/gender_image_male"
                        android:background="@drawable/gender_circle" >

                        <!-- Add the image   -->
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/image_desc"
                            android:src="@drawable/transgender" />
                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/rectangle_button"
                android:layout_marginBottom="15dp">

                <!--                Text area for bio Information -->
                <EditText
                    android:id="@+id/bio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:autofillHints="Bio"
                    android:background="@color/white"
                    android:hint="@string/bio"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:textColorHint="@color/orange"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_button"
                android:layout_marginBottom="15dp"
                android:id="@+id/profile_image">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/addp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:id="@+id/dp"
                    android:contentDescription="@string/upload_profile"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@id/dp"
                    android:contentDescription="@string/upload_profile"
                    android:text="@string/upload_profile"
                    android:textColor="@color/orange"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/round_button"
                    android:text="@string/sign_up"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="UsingOnClickInXml" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>